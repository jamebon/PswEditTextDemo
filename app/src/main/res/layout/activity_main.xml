<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.jamesbon.pswedittext.PswEditText
        android:id="@+id/pswEditText1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_psw_edittext" />

    <com.jamesbon.pswedittext.PswEditText
        android:id="@+id/pswEditText2"
        android:padding="2dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_psw_edittext2" />

    <com.jamesbon.pswedittext.PswEditText
        android:id="@+id/pswEditText3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_psw_edittext" />

    <com.jamesbon.pswedittext.PswEditText
        android:id="@+id/pswEditText4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_psw_edittext" />
</LinearLayout>